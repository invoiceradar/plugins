{
  "$schema": "https://raw.githubusercontent.com/invoiceradar/plugins/main/schema.json",
  "id": "deepl",
  "name": "DeepL",
  "description": "Translate texts & full document files instantly.",
  "homepage": "https://www.deepl.com",
  "configSchema": {
    "username": {
      "type": "string",
      "title": "Username",
      "required": false
    },
    "password": {
      "type": "password",
      "title": "Password",
      "required": false
    }
  },
  "checkAuth": [
    {
      "action": "navigate",
      "url": "https://www.deepl.com/login"
    },
    {
      "action": "waitForElement",
      "selector": "[data-testid^='menu-account-']"
    },
    {
      "action": "checkElementExists",
      "selector": "[data-testid='menu-account-in-btn']"
    }
  ],
  "startAuth": [
    {
      "action": "navigate",
      "url": "https://www.deepl.com/login"
    },
    {
      "action": "type",
      "selector": "[name='email']",
      "value": "{{config.username}}"
    },
    {
      "action": "type",
      "selector": "[name='password']",
      "value": "{{config.password}}"
    },
    {
      "action": "waitForElement",
      "selector": "[data-testid='menu-account-in-btn']",
      "timeout": 120000
    }
  ],
  "getDocuments": [
    {
      "action": "navigate",
      "url": "https://www.deepl.com/your-account/invoices"
    },
    {
      "action": "extractAll",
      "script": "fetch('https://w.deepl.com/invoices?request_type=jsonrpc&il=en&method=getInvoices', { headers: { 'content-type': 'application/json' }, referrer: 'https://www.deepl.com/', referrerPolicy: 'strict-origin-when-cross-origin', body: '{\"id\":68330001,\"jsonrpc\":\"2.0\",\"method\":\"getInvoices\",\"params\":{\"limit\":100}}', method: 'POST', mode: 'cors', credentials: 'include' }).then(res => res.json()).then(d => d.result.data.map(i => ({ id: i.id, date: i.date, total: i.invoicedAmount.amount/100 + i.invoicedAmount.currencyCode })));",
      "forEach": [
        {
          "action": "downloadPdf",
          "document": "{{item}}",
          "url": "https://w.deepl.com/invoices/{{item.id}}"
        }
      ]
    }
  ]
}
