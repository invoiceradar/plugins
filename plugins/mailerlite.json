{
  "$schema": "https://raw.githubusercontent.com/invoiceradar/plugins/main/schema.json",
  "id": "mailerlite",
  "name": "Mailerlite",
  "description": "Mailerlite is an email sending service.",
  "homepage": "https://mailerlite.com",
  "configSchema": {
    "accountId": {
      "type": "string",
      "title": "Account ID",
      "description": "The ID of your MailerLite account",
      "required": false
    }
  },
  "checkAuth": [
    {
      "action": "navigate",
      "url": "https://dashboard.mailerlite.com/login"
    },
    {
      "action": "checkElementExists",
      "selector": "[data-test-id='user-dropdown']"
    }
  ],
  "startAuth": [
    {
      "action": "navigate",
      "url": "https://dashboard.mailerlite.com/login"
    },
    {
      "action": "waitForElement",
      "selector": "[data-test-id='user-dropdown']",
      "timeout": 120000
    }
  ],
  "getConfigOptions": [
    {
      "action": "navigate",
      "url": "https://dashboard.mailerlite.com/accounts",
      "waitForNetworkIdle": true
    },
    {
      "action": "extractAll",
      "selector": "[data-test-id='account-box']",
      "variable": "account",
      "fields": {
        "name": {
          "selector": "//div[contains(@class, 'flex-col')]/span[1]"
        },
        "accountId": {
          "selector": "form",
          "attribute": "action",
          "transform": "(url) => url.split('/').pop()"
        }
      },
      "forEach": [
        {
          "action": "exposeOption",
          "config": "accountId",
          "option": {
            "label": "{{account.name}}",
            "value": "{{account.accountId}}"
          }
        }
      ]
    }
  ],
  "getDocuments": [
    {
      "action": "if",
      "script": "Boolean('{{config.accountId}}')",
      "then": [
        {
          "action": "navigate",
          "url": "https://dashboard.mailerlite.com/accounts",
          "waitForNetworkIdle": true
        },
        {
          "action": "click",
          "selector": "form[action='https://dashboard.mailerlite.com/accounts/switch/{{config.accountId}}'] [data-test-id='select-account-button']"
        },
        {
          "action": "waitForNetworkIdle"
        }
      ]
    },
    {
      "action": "navigate",
      "url": "https://dashboard.mailerlite.com/billing/invoices"
    },
    {
      "action": "waitForElement",
      "selector": "table"
    },
    {
      "action": "extractAll",
      "selector": "tbody tr",
      "fields": {
        "id": {
          "selector": "td:nth-child(2) a",
          "attribute": "href",
          "transform": "(url) => url.split('/').slice(-1)[0].split('?')[0]"
        },
        "date": {
          "selector": "td:nth-child(1)"
        },
        "url": {
          "selector": "td:nth-child(5) a",
          "attribute": "href"
        },
        "total": {
          "selector": "td:nth-child(5)"
        }
      },
      "forEach": [
        {
          "action": "downloadPdf",
          "url": "{{item.url}}",
          "document": "{{item}}"
        }
      ]
    }
  ]
}
