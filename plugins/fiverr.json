{
  "$schema": "https://raw.githubusercontent.com/invoiceradar/plugins/main/schema.json",
  "id": "fiverr",
  "name": "Fiverr",
  "description": "Fiverr is a platform to find and hire freelancers.",
  "homepage": "https://www.fiverr.com/",
  "checkAuth": [
    {
      "action": "navigate",
      "url": "https://www.fiverr.com/login"
    },
    {
      "action": "waitForElement",
      "selector": ".main-content"
    },
    {
      "action": "checkElementExists",
      "selector": "[name='user_id']"
    }
  ],
  "startAuth": [
    {
      "action": "navigate",
      "url": "https://www.fiverr.com/login"
    },
    {
      "action": "waitForElement",
      "selector": "[name='user_id']",
      "timeout": 120000
    },
    {
      "action": "waitForURL",
      "url": "https://www.fiverr.com/",
      "timeout": 120000
    }
  ],
  "getDocuments": [
    {
      "action": "navigate",
      "url": "https://www.fiverr.com/billing"
    },
    {
      "action": "waitForElement",
      "selector": ".table-tbody"
    },
    {
      "action": "extractAll",
      "selector": ".table-tbody .table-tr",
      "forEach": [
        {
          "action": "if",
          "script": "'{{item.documentType}}' == 'Invoice'",
          "then": [
            {
              "action": "downloadPdf",
              "url": "{{item.url}}",
              "document": {
                "type": "invoice",
                "id": "{{item.id}}",
                "date": "{{item.date}}",
                "total": "{{item.amount}} {{item.currency}}"
              },
              "metadata": {
                "orderId": "{{item.orderId}}"
              }
            }
          ],
          "else": [
            {
              "action": "downloadPdf",
              "url": "{{item.url}}",
              "document": {
                "type": "refund",
                "id": "{{item.id}}",
                "date": "{{item.date}}",
                "total": "{{item.amount}} {{item.currency}}"
              },
              "metadata": {
                "orderId": "{{item.orderId}}"
              }
            }
          ]
        }
      ],
      "fields": {
        "id": ".table-td.table-hide-sm p:last-of-type",
        "documentType": "td:nth-of-type(3) > p",
        "date": {
          "selector": ".table-td:nth-of-type(2)",
          "transform": "(d) => d.replaceAll('/', '.')"
        },
        "amount": ".table-td:nth-of-type(7)",
        "currency": ".table-td:nth-of-type(6)",
        "url": {
          "selector": ".table-td:nth-of-type(8) a",
          "attribute": "href"
        },
        "orderId": ".invoices-table-link"
      },
      "pagination": {
        "type": "next",
        "selector": ".table-pagination-arrows > button:nth-child(2):not(.table-pagination-arrow-disabled)"
      }
    }
  ]
}
